{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "python": {
      "type": "library",
      "root": "libs/python",
      "entryFile": "index",
      "sourceRoot": "libs/python/src",
      "compilerOptions": {
        "tsConfigPath": "libs/python/tsconfig.lib.json"
      }
    },
    "java": {
      "type": "library",
      "root": "libs/java",
      "entryFile": "index",
      "sourceRoot": "libs/java/src",
      "compilerOptions": {
        "tsConfigPath": "libs/java/tsconfig.lib.json"
      }
    },
    "gcc": {
      "type": "library",
      "root": "libs/gcc",
      "entryFile": "index",
      "sourceRoot": "libs/gcc/src",
      "compilerOptions": {
        "tsConfigPath": "libs/gcc/tsconfig.lib.json"
      }
    }
  }
}